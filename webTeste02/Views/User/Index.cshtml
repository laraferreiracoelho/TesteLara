@using Microsoft.AspNetCore.Http;

@model IEnumerable<webTeste02.Models.User>

<section class="content-header">
    <h1>
        Usuários
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Usuário</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Gerenciar Usuários</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Data de Nascimento</th>
                                <th>Documento</th>
                                <th>Nivel</th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td>@Html.DisplayFor(modelItem => item.email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Documento)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nivel)</td>
                                    <td>
                                        <a href="/User/Update/@item.id">Update</a> |
                                        @if (Context.Session.GetString("Nivel") == "Loja")
                                        {
                                            <a href="" onclick="Delete('@item.id')">Delete</a>
                                        }
                                    </td>
                                </tr>
                            }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
    $(function () {
        $('#example1').DataTable();
    });
    function Delete(id){
        var txt;
        var r = confirm("Quer mesmo deletar?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "User")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl="/User";
                            window.location.reload(true);
                    }
                    else {
                        alert("Houve um problema, tente mais tarde!");
                    }
                }
                });
            window.location.reload(true);

        }
    }
</script>